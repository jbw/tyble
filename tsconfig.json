{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es5",
        "module": "es2015",
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "jsx": "react",
        "moduleResolution": "node",
        "strict": true,
        "baseUrl": ".",
        "lib": [
            "es6",
            "dom"
        ],
        /*"paths": {
            "@components/*": [ "src/components/*" ],
            "@containers/*": [ "src/components/containers/*" ]
        }*/
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}
