{
    "name": "tyble",
    "version": "0.2.0",
    "description": "A typesafe React table component",
    "main": "dist/tyble.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "webpack",
        "build:prod": "webpack -p",
        "start": "webpack-dev-server --progress --inline --hot",
        "lint:css": "stylelint ./src/**/*.tsx",
        "lint:ts": "tslint -p tsconfig.json -c tslint.json -t stylish",
        "prepublishOnly": "webpack -p",
        "test": "jest",
        "coverage": "nyc --reporter=html --reporter=text-lcov mocha | coveralls",
        "clean-install": "rm -rf node_modules/ && yarn cache clean && yarn install --pure-lockfile"
    },
    "files": [
        "dist/"
    ],
    "jest": {
        "collectCoverage": true,
        "coverageDirectory": "<rootDir>/test/coverage-jest",
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "html"
        ],
        "mapCoverage": true,
        "transform": {
            "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "moduleNameMapper": {
            "^.+\\.(css|less|scss)$": "identity-obj-proxy"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "collectCoverageFrom": [
            "src/**/*.{js,ts,tsx}",
            "!**/*.spec.{js,ts}",
            "!**/node_modules/**",
            "!**/test/**"
        ]
    },
    "pre-commit": "pass",
    "repository": "git+https://github.com/jbw/tyble.git",
    "author": "Jason B Watson",
    "license": "MIT",
    "devDependencies": {
        "@types/enzyme": "^3.1.4",
        "@types/jest": "^22.1.1",
        "@types/react": "^16.0.25",
        "@types/react-dom": "^16.0.3",
        "awesome-typescript-loader": "^3.2.3",
        "coveralls": "^3.0.0",
        "css-loader": "^0.28.7",
        "enzyme": "^3.2.0",
        "enzyme-adapter-react-16": "^1.1.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^21.2.1",
        "node-sass": "^4.6.1",
        "react-axe": "^2.1.7",
        "react-test-renderer": "^16.1.0",
        "sass-loader": "^6.0.6",
        "style-loader": "^0.19.0",
        "stylelint": "^8.2.0",
        "stylelint-config-standard": "^17.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.0.0",
        "tslint": "^5.8.0",
        "tslint-microsoft-contrib": "^5.0.1",
        "tslint-react": "^3.2.0",
        "typescript": "^2.6.1",
        "webpack": "^3.7.1",
        "webpack-bundle-analyzer": "^2.9.1",
        "webpack-dev-server": "^2.9.2"
    },
    "dependencies": {
        "react": "^16.1.1",
        "react-dom": "^16.1.1",
        "styled-components": "^2.2.3"
    }
}
